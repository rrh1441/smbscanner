# Worker/Resource Governor configuration
# Copy the values you need into your project root .env file.

# Redis connection used by the resource governor (cluster or sentinel URLs work too)
REDIS_URL=redis://127.0.0.1:6379/0

# PgBouncer (or PostgreSQL) connection string that workers should use
# Replace YOUR_USERNAME and YOUR_PASSWORD with your actual credentials
PGBOUNCER_URL=postgres://YOUR_USERNAME:YOUR_PASSWORD@127.0.0.1:6432/scanner_local

# Resource ceilings enforced by the governor
RESOURCE_LIMIT_DB=8
RESOURCE_LIMIT_TLS=2
RESOURCE_LIMIT_CPU=4
RESOURCE_LIMIT_SCAN_WORKER=4

# Optional: tune lease timings (defaults shown)
DB_LEASE_TTL_MS=30000
DB_LEASE_WAIT_TIMEOUT_MS=60000
SCAN_WORKER_LEASE_TTL_MS=600000
MODULE_LEASE_TTL_MS=60000
RESOURCE_SWEEP_INTERVAL_MS=30000
